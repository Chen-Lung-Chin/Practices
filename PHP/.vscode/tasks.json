{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "type": "shell",
    "options": { "cwd": "${workspaceRoot}" },
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
    },
    "tasks": [
        {
            "label": "Run advanced.php",
            "command": "php",
            "args": [
                "advanced.php",
                "--dump-instr=yes"

            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}