{
    "version": "2.0.0",
    "type": "shell",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
    },
    "options": { "cwd": "${workspaceRoot}/build" },
    "tasks": [
        {
            "taskName": "Configure : Debug",
            "command": "cmake -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug ..",
            "problemMatcher": []
        },
        {
            "taskName": "Build: Debug",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "make VERBOSE=1 -j8",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "taskName": "Run",
            "command": "${workspaceRoot}/build/StdContainer",
            "problemMatcher": []
        }
    ]
}